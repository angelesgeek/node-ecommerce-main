<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/headeradmin') %>
  <main class="my-5 py-4">
    <div class="container">
      <h2 class="my-5 h2 text-center text-white">Editar perfil de usuario </h2>
      <div class="row mb-5">
        <div class="col-md-8 mx-auto">
          <div class="card shadow my-4">

            <form class="card-body" action="/editUsers/<%= user.id %>?_method=put" method="post">
                
              <div class="md-form">
                <input type="text" name="name" id="name" value="<%= user.name %>" class="form-control">
                
              </div>

              <div class="md-form">
                <input type="hidden" name="id_app" id="id_app" value="<%= user.id_app %>" class="form-control">
              </div>
              
              <div class="md-form">
                <input type="hidden" name="id" id="id" value="<%= user.id %>" class="form-control">
              </div>

              <div class="md-form">
                <input type="text" name="email" id="email" value="<%= user.email %>" class="form-control">
                
              </div>

              <div class="md-form">
                <input type="password" name="password" id="password" class="form-control">
               
              </div>

              <div class="md-form">
                <input type="password" name="confirm-password" id="confirm-password" class="form-control">
                
              </div>

              <!-- Agregar el botÃ³n de enviar -->
              <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('../partials/footer') %>
  <%- include('../partials/scripts') %>
</body>

</html>
