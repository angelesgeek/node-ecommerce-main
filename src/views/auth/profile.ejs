<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head') %>

</head>

<body>
    <%- include('../partials/headeradmin') %>

        <!--Main layout-->
        <main class="mt-5 pt-4 bg-dark white-text">
            <div class="container bg-dark mt-5 mb-5">
                <div class="row">

                    <div class="col-md-12">
                        <% if (userToView) { %>
                          <h2 class="text-center">
                            <% if (loggedInUser && loggedInUser.rol === 1) { %>

                              Rol: <%= userToView.rol %> - Nombre: <%= userToView.name %>
                              
                            <% } else { %>
                              <%= userToView.name %>
                            <% } %>
                          </h2>
                        <% } else if (loggedInUser) { %>
                          <p>
                            <% if (loggedInUser.rol === 1) { %>
                              Rol: <%= loggedInUser.rol %> - Nombre: <%= loggedInUser.name %>
                            <% } else { %>
                              <%= loggedInUser.name %>
                            <% } %>
                          </p>
                        <% } %>
                      </div>

                </div>
                <div class="row mt-5">
                    <div class="col-md-12">
                        <div class="card mb-5 bg-dark white-text">
                        <div class="card-header bg-danger">
                            Datos del perfil
                        </div>

                        <div class="card-body">

                                            <% if (userToView) { %>
                        <p>Perfil de <%= userToView.name %></p>
                        <p>Correo electrónico: <%= userToView.email %></p>
                        <!-- ... muestra la información del perfil de "userToView" ... -->
                        <% } else { %>
                        <p>Perfil de <%= loggedInUser.name %></p>
                        <p>Correo electrónico: <%= loggedInUser.email %></p>
                        <!-- ... muestra la información del perfil del usuario logueado ... -->
                        <% } %>
                        </div>
                        
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                <div class="card mb-5 bg-dark white-text">
                    <div class="card-header bg-danger">
                        Mis Pedidos
                    </div>
                    <div class="card-body white-text">
                        <table class="table table-responsive-md mb-0">
                            <thead>
                                <tr>
                                    <th class="white-text" style="width: 50px;">
                                        <strong>#</strong>
                                    </th>
                                    <th class="white-text">
                                        <strong>Fecha</strong>
                                    </th>
                                    <th class="white-text">
                                        <strong>Envío</strong>
                                    </th>
                                    <th class="white-text">
                                        <strong>Pago</strong>
                                    </th>
                                    <th class="white-text">
                                        <strong>Total</strong>
                                    </th>
                                    <th style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody class="white-text">
                                <% orders.forEach((order,index)=> { %>
                                    <tr>
                                        <th scope="row">
                                            <%= index + 1 %>
                                        </th>
                                        <td>
                                            <%= new Intl.DateTimeFormat('es-ES', { year: 'numeric' , month: 'numeric' ,
                                                day: '2-digit' ,hour: 'numeric' , minute: 'numeric'
                                                }).format(order.createdAt) %>
                                        </td>
                                        <td>
                                            <%= order.shippingMethod %>
                                        </td>
                                        <td>
                                            <%= order.paymentMethod %>
                                        </td>
                                        <td>$ <%= order.total %>
                                        </td>
                                        <td><a class="btn btn-warning btn-sm" href="<%= `/order/${order.id}` %> "><i
                                                    class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                <div class="card mb-5 bg-dark white-text">
                    <% include('../partials/messages', { userLogged: loggedInUser }) %>
                </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                <div class="card mb-5 bg-dark white-text">
                    <div class="card-header bg-danger white-text">
                        Mensajes Recibidos
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-md mb-0">
                            <thead>
                                <tr class="white-text">
                                    <% messages.forEach( message=> { %>
                                        <%- include('../partials/mensajesRecibidos', {message}) %>
                                            <% } ) %>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                    </div>
                </div>

                <div>
                    <% if (loggedInUser.rol === 1) { %>
                        <div>
                          <% if (numberOfOrders !== undefined && totalSpent !== undefined) { %>
                            <p>Cantidad de Pedidos: <%= numberOfOrders %></p>
                            <% if (typeof totalSpent === 'number') { %>
                              <p>Total Gastado: $<%= totalSpent.toFixed(2) %></p>
                            <% } %>
                          <% } %>
                          <a href="/users/clients" class="btn btn-primary">Volver a la Lista de Clientes</a>
                        </div>
                      <% } %>
                </div>
            
            </div>
            </div>
        </main>
        <!--Main layout-->
        <%- include('../partials/footer') %>
            <%- include('../partials/scripts') %>
</body>

</html>