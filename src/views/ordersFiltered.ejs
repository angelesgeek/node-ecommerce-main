<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/headeradmin') %>

    <main class="mt-5 pt-4 bg-dark white-text">
        <div class="container">
            <h2 class="mt-5 mb-3 h2 text-center">
               Pedidos filtrados por ID de Cliente
            </h2>
            <div class="card mb-5 bg-dark white-text">
                <div class="card-header">
                    <form action="/orders" method="GET" class="form-inline">
                        <div class="form-group">
                            <label for="userId" class="mr-2">ID de Cliente:</label>
                            <input type="text" name="userId" id="userId" class="form-control" placeholder="Ingresa el ID de Cliente" value="<%= req.query.userId %>">
                        </div>
                        <button type="submit" class="btn btn-primary ml-2">Filtrar</button>
                    </form>
                </div>
                <div class="card-body">
                    <table class="table table-responsive-md mb-0">
                        <thead>
                            <tr>
                                <th class="white-text">
                                    <strong>ID de Pedido</strong>
                                </th>
                                <th class="white-text">
                                    <strong>ID de Cliente</strong>
                                </th>
                                <th class="white-text">
                                    <strong>ID de Usuario</strong>
                                </th>
                                <th class="white-text">
                                    <strong>Total</strong>
                                </th>
                                <th class="white-text">
                                    <strong>Ver</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="white-text">
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div
