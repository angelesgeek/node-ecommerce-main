<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/headeradmin') %>
        <main class="mt-5 pt-4">
            <div class="container">
                <h2 class="mt-5 mb-3 h2 text-center white-text"> Pedido Nro <%= order.id %> del cliente número <%=
                            order.id_app %>
                </h2>
                <div class="card my-5">
                    <div class="card-body bg-dark white-text">
                        <table class="table table-responsive-md mb-0">
                            <thead>
                                <tr class="white-text">
                                    <th style="width: 50px;">
                                        <strong>#</strong>
                                    </th>
                                    <th class="th-lg">
                                        <strong>Producto</strong>
                                    </th>
                                    <th class="th-lg ">
                                        <strong>Precio</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Cantidad</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Subtotal</strong>
                                    </th>
                                    <th style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody class="cartRows">
                                <% for( let i=0; i < order.orderItems.length; i++ ) { %>
                                    <tr class="white-text">
                                        <th scope="row">
                                            <%= i + 1 %>
                                        </th>
                                        <td>
                                            <%= order.orderItems[i].name %>
                                        </td>
                                        <td>$ <%= order.orderItems[i].price%>
                                        </td>
                                        <td class="text-center">
                                            <%= order.orderItems[i].quantity%>
                                        </td>
                                        <td class="text-center">$
                                            <%= order.orderItems[i].price * order.orderItems[i].quantity%>
                                        </td>
                                    </tr>

                                    <% } %>
                            </tbody>
                        </table>
                        <div class="card-footer text-right">
                            <h2>Total: <span class="totalAmount">$ <%= order.total %> </span></h2>
                        </div>
                    </div>
                </div>
                <div class="card bg-dark white-text">
                    <div class="card-header text-center">
                        Detalles de la compra
                    </div>
                    <form class="card-body" id="checkoutCart">
                        <div class="row">
                            <div class=" col-md-6 mb-4">
                                <p><strong>Método de Entrega:</strong>
                                    <%= order.shippingMethod %>
                                </p>
                            </div>
                            <div class=" col-md-6 mb-4">
                                <p><strong>Forma de Pago:</strong>
                                    <%= order.paymentMethod %>
                                </p>
                            </div>
                            <div class=" col-md-6 mb-4">
                                <p><strong>Tipo de factura:</strong>
                                    <%= order.bill_type %>
                                </p>
                            </div>
                            <div class=" col-md-6 mb-4">
                                <p><strong>Estado del pedido:</strong>
                                    <% if (order.order_status===1) { %>
                                        En curso
                                        <% } else if (order.order_status===2) { %>
                                            Confirmado
                                            <% } else { %>
                                                En revisión
                                                <% } %>
                                </p>
                            </div>
                            <div class=" col-md-6 mb-4">
                                <p><strong>Comentarios:</strong>
                                    <%= order.comments %>
                                </p>
                            </div>
                            <div class=" col-md-6 mb-4">
                                <p><strong>Cliente:</strong>
                                    <%= order.id_app %>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
                <a href="/orders" class="btn btn-info ml-0">Ir a Pedidos</a>
            </div>
        </main>
        <%- include('./partials/footer') %>
            <%- include('./partials/scripts') %>
</body>

</html>