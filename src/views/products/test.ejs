<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/products.css">
</head>

<body>
  <%- include('../partials/headeradmin') %>
    <main class="my-5 py-4">
      <div class="container">
        <h2 class="my-5 h2 text-center text-white">Resultados de b√∫squeda</h2>
        <section class="text-center mt-2 mb-4">
            <div class="row wow fadeIn">
                <% products.forEach(function(product) { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-white"><%= product.name %></h5>
                                <p class="card-text text-white">Marca: <%= product.marca %></p>
                                <a href="" class="text-white">Ver detalles</a> 
                                <!-- Mostrar otros detalles del producto si es necesario -->
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
      </div>
    </main>
    <%- include('../partials/footer') %>
      <%- include('../partials/scripts') %>
</body>

</html>