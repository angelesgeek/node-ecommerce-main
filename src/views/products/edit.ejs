<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/products.css">
</head>

<body>
  <%- include('../partials/headeradmin') %>
    <main class="my-5 py-4">
      <div class="container bg-dark text-white">
        <h2 class="my-5 h2 text-center">Editar Producto</h2>
        <div class="row mb-5">
          <div class="col-md-8 mx-auto">
            <div class="card shadow my-4  bg-dark text-white">
              
                  <form class="card-body" action="/products/<%= product.id %>?_method=put" method="POST" enctype="multipart/form-data">
                    
                    <div class="form-floating mb-3">
                      <input type="number" name="stock" id="stock" class="form-control bg-dark text-white border-bottom" value="<%= product.stock %>">
                      <label for="stock" class="text-white">Stock</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                      <input type="number" name="code" id="code" class="form-control bg-dark text-white border-bottom" value="<%= product.code %>">
                      <label for="code" class="text-white">Código</label>
                    </div>
                  
                    <div class="form-floating mb-3">
                      <input type="text" name="name" id="name" class="form-control bg-dark text-white border-bottom" value="<%= product.name %>">
                      <label for="name" class="text-white">Nombre</label>
                    </div>
                  
                    <div class="form-floating mb-3">
                      <input type="text" name="brand" id="brand" class="form-control bg-dark text-white border-bottom" value="<%= product.brand %>">
                      <label for="brand" class="text-white">Marca</label>
                    </div>
                  
                    <div class="form-floating mb-3">
                      <input type="text" name="automotive" id="automotive" class="form-control bg-dark text-white border-bottom" value="<%= product.automotive %>">
                      <label for="automotive" class="text-white">Automotriz</label>
                    </div>
                  
                    <div class="form-floating mb-3">
                      <input type="text" name="engine" id="engine" class="form-control bg-dark text-white border-bottom" value="<%= product.engine %>">
                      <label for="engine" class="text-white">Motor</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="text" name="model" id="model" class="form-control bg-dark text-white border-bottom" value="<%= product.model %>">
                      <label for="model" class="text-white">Modelo</label>
                    </div>
                  
                    <div class="form-floating mb-3">
                      <input type="number" name="oe_number" id="oe_number" class="form-control bg-dark text-white border-bottom" value="<%= product.oe_number %>">
                      <label for="oe_number" class="text-white">Num. OE</label>
                    </div>
                  
                    <div class="form-floating mb-3">
                      <input type="text" name="description" id="description" class="form-control bg-dark text-white border-bottom" value="<%= product.engine %>">
                      <label for="description" class="text-white">Descripción</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="number" step="0.01" name="price" id="price" class="form-control bg-dark text-white border-bottom" value="<%= product.price %>">
                      <label for="price" class="text-white">Precio</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                      <input type="date" name="price_update" id="price_update" class="form-control bg-dark text-white border-bottom" value="<%= product.price_update %>">
                      <label for="price_update" class="text-white">Actualización de precio</label>
                    </div>

                    <div class="form-floating mb-3">
                      <input type="text" name="specification" id="specification" class="form-control bg-dark text-white border-bottom" value="<%= product.specification %>">
                      <label for="specification" class="text-white">Especificaciones</label>
                    </div>

                    <div class="custom-file mb-3">
                      <input type="file" class="custom-file-input bg-dark text-white border-bottom" name="img" id="img" aria-describedby="inputImage" lang="es">
                      <label class="custom-file-label" for="img">Elegir Foto</label>
                    </div>
                  
                    <div class="custom-control custom-checkbox mb-3">
                      <input type="checkbox" class="custom-control-input" id="marked" name="marked" <%=product.marked ? 'checked' :'' %>>
                      <button class="btn btn-primary" type="submit">Guardar</button>
                  </form>
                
              
            </div>
          </div>
        </div>

      </div>
    </main>
    <%- include('../partials/footer') %>
      <%- include('../partials/scripts') %>
</body>

</html>